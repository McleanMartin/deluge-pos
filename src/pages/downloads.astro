---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={`Downloads - ${SITE_TITLE}`} description="Download Deluge POS for Windows and Linux" />
		<style>
			main {
				padding: 4rem 2rem;
			}
			.downloads-container {
				max-width: 1000px;
				margin: 0 auto;
			}
			.page-header {
				text-align: center;
				margin-bottom: 4rem;
			}
			.page-header h1 {
				font-size: 3rem;
				margin-bottom: 1rem;
			}
			.page-header p {
				font-size: 1.125rem;
				color: rgb(var(--gray));
				max-width: 600px;
				margin: 0 auto;
			}
			.download-grid {
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
				gap: 2rem;
				margin-bottom: 4rem;
			}
			.download-card {
				background: #ffffff;
				padding: 2.5rem;
				border: 2px solid rgb(var(--gray-medium));
				border-radius: var(--border-radius);
				transition: var(--transition);
			}
			.download-card:hover {
				border-color: rgb(var(--black));
				box-shadow: var(--box-shadow-lg);
			}
			.platform-icon {
				width: 48px;
				height: 48px;
				background: #000000;
				border-radius: 8px;
				display: flex;
				align-items: center;
				justify-content: center;
				margin-bottom: 1.5rem;
				font-size: 1.5rem;
			}
			.download-card h3 {
				font-size: 1.75rem;
				margin-bottom: 0.5rem;
			}
			.download-card .platform-desc {
				color: rgb(var(--gray));
				margin-bottom: 1.5rem;
				font-size: 0.95rem;
			}
			.download-options {
				display: flex;
				flex-direction: column;
				gap: 0.75rem;
				margin-bottom: 1.5rem;
			}
			.btn-download {
				display: flex;
				align-items: center;
				justify-content: space-between;
				background: #000000;
				color: #ffffff;
				padding: 1rem 1.25rem;
				border-radius: var(--border-radius);
				text-decoration: none;
				font-weight: 600;
				transition: var(--transition);
			}
			.btn-download:hover {
				opacity: 1;
				background: #1a1a1a;
				transform: translateX(4px);
			}
			.version-badge {
				display: inline-block;
				background: rgb(var(--gray-light));
				color: rgb(var(--gray-dark));
				padding: 0.25rem 0.75rem;
				border-radius: 4px;
				font-size: 0.8rem;
				font-weight: 600;
				margin-top: 1rem;
			}
			.requirements-section {
				background: rgb(var(--gray-light));
				padding: 2.5rem;
				border-radius: var(--border-radius);
				margin-top: 3rem;
			}
			.requirements-section h3 {
				font-size: 1.5rem;
				margin-bottom: 1.5rem;
			}
			.requirements-grid {
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
				gap: 1.5rem;
			}
			.requirement-item {
				display: flex;
				align-items: flex-start;
				gap: 0.75rem;
			}
			.requirement-icon {
				width: 20px;
				height: 20px;
				background: #000000;
				border-radius: 50%;
				flex-shrink: 0;
				margin-top: 0.2rem;
			}
			.requirement-text {
				color: rgb(var(--gray-dark));
				line-height: 1.6;
			}
			.support-cta {
				text-align: center;
				margin-top: 3rem;
				padding: 2rem;
				background: #ffffff;
				border: 2px solid rgb(var(--gray-medium));
				border-radius: var(--border-radius);
			}
			.support-cta p {
				margin-bottom: 1rem;
				font-size: 1.125rem;
			}
			.btn-secondary {
				display: inline-block;
				padding: 0.875rem 2rem;
				background: transparent;
				color: #000000;
				border: 2px solid #000000;
				border-radius: var(--border-radius);
				font-weight: 600;
				text-decoration: none;
				transition: var(--transition);
			}
			.btn-secondary:hover {
				opacity: 1;
				background: #000000;
				color: #ffffff;
			}
			@media (max-width: 768px) {
				.download-grid {
					grid-template-columns: 1fr;
				}
				.page-header h1 {
					font-size: 2rem;
				}
				.requirements-grid {
					grid-template-columns: 1fr;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<div class="downloads-container">
				<div class="page-header">
					<h1>Download Deluge POS</h1>
					<p>
						Get the latest version for your platform. Free to download with automatic updates.
					</p>
				</div>

				<div class="download-grid">
					<div class="download-card">
						<div class="platform-icon">⊞</div>
						<h3>Windows</h3>
						<p class="platform-desc">For Windows 10 and later</p>
						<div class="download-options">
							<a href="#" class="btn-download">
								<span>Windows 64-bit</span>
								<span>→</span>
							</a>
							<a href="#" class="btn-download">
								<span>Windows 32-bit</span>
								<span>→</span>
							</a>
						</div>
						<span class="version-badge">v1.0.0 • Feb 15, 2026</span>
					</div>

					<div class="download-card">
						<div class="platform-icon">⌘</div>
						<h3>Linux</h3>
						<p class="platform-desc">For all major distributions</p>
						<div class="download-options">
							<a href="#" class="btn-download">
								<span>.deb (Debian/Ubuntu)</span>
								<span>→</span>
							</a>
							<a href="#" class="btn-download">
								<span>.rpm (Fedora/RHEL)</span>
								<span>→</span>
							</a>
							<a href="#" class="btn-download">
								<span>AppImage</span>
								<span>→</span>
							</a>
						</div>
						<span class="version-badge">v1.0.0 • Feb 15, 2026</span>
					</div>
				</div>

				<div class="requirements-section">
					<h3>System Requirements</h3>
					<div class="requirements-grid">
						<div class="requirement-item">
							<div class="requirement-icon"></div>
							<div class="requirement-text">
								<strong>OS:</strong> Windows 10+ or modern Linux
							</div>
						</div>
						<div class="requirement-item">
							<div class="requirement-icon"></div>
							<div class="requirement-text">
								<strong>RAM:</strong> 4GB minimum (8GB recommended)
							</div>
						</div>
						<div class="requirement-item">
							<div class="requirement-icon"></div>
							<div class="requirement-text">
								<strong>Storage:</strong> 500MB available space
							</div>
						</div>
						<div class="requirement-item">
							<div class="requirement-icon"></div>
							<div class="requirement-text">
								<strong>Display:</strong> 1024x768 minimum
							</div>
						</div>
						<div class="requirement-item">
							<div class="requirement-icon"></div>
							<div class="requirement-text">
								<strong>Network:</strong> Internet for updates
							</div>
						</div>
					</div>
				</div>

				<div class="support-cta">
					<p>Need help with installation?</p>
					<a href="/contact" class="btn-secondary">Contact Support</a>
				</div>
			</div>
		</main>
		<Footer />
	</body>
</html>

---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={`Downloads - ${SITE_TITLE}`} description="Download Deluge POS for Windows, macOS, and Linux" />
		<style>
			.page-header {
				text-align: center;
				margin-bottom: 3em;
			}
			.page-header h1 {
				font-size: 3em;
				margin-bottom: 0.3em;
			}
			.download-section {
				margin: 3em 0;
			}
			.download-grid {
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
				gap: 2em;
				margin: 2em 0;
			}
			.download-card {
				background: #ffffff;
				padding: 2em;
				border: 1px solid #e0e0e0;
				border-radius: 4px;
				transition: box-shadow 0.2s;
			}
			.download-card:hover {
				box-shadow: var(--box-shadow);
			}
			.download-card h3 {
				margin-top: 0;
				font-size: 1.8em;
			}
			.download-button {
				display: block;
				background: #000000;
				color: #ffffff;
				padding: 0.9em 1.5em;
				border-radius: 4px;
				text-decoration: none;
				margin: 0.5em 0;
				transition: background 0.2s;
				text-align: center;
				font-weight: 500;
			}
			.download-button:hover {
				background: #333333;
			}
			.version-info {
				color: rgb(var(--gray));
				font-size: 0.85em;
				margin-top: 1.5em;
				padding-top: 1em;
				border-top: 1px solid #e0e0e0;
			}
			.requirements-box {
				background: #f8f8f8;
				padding: 2em;
				border-left: 3px solid #000000;
				margin: 2em 0;
			}
			.requirements-box h3 {
				margin-top: 0;
			}
			.requirements-box ul {
				margin: 1em 0;
				line-height: 1.8;
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<div class="page-header">
				<h1>Downloads</h1>
				<p>
					Get the latest version of Deluge POS for your operating system.
				</p>
			</div>

			<div class="download-grid">
				<div class="download-card">
					<h3>Windows</h3>
					<p>For Windows 10 and later</p>
					<a href="#" class="download-button">Windows 64-bit</a>
					<a href="#" class="download-button">Windows 32-bit</a>
					<div class="version-info">
						Version 1.0.0<br>
						February 15, 2026
					</div>
				</div>

				<div class="download-card">
					<h3>macOS</h3>
					<p>For macOS 11 (Big Sur) and later</p>
					<a href="#" class="download-button">macOS Intel</a>
					<a href="#" class="download-button">macOS Apple Silicon</a>
					<div class="version-info">
						Version 1.0.0<br>
						February 15, 2026
					</div>
				</div>

				<div class="download-card">
					<h3>Linux</h3>
					<p>For all major distributions</p>
					<a href="#" class="download-button">.deb Package</a>
					<a href="#" class="download-button">.rpm Package</a>
					<a href="#" class="download-button">AppImage</a>
					<div class="version-info">
						Version 1.0.0<br>
						February 15, 2026
					</div>
				</div>
			</div>

			<div class="download-section">
				<div class="requirements-box">
					<h3>System Requirements</h3>
					<ul>
						<li>Operating System: Windows 10, macOS 11, or modern Linux distribution</li>
						<li>RAM: 4GB minimum (8GB recommended)</li>
						<li>Disk Space: 500MB available</li>
						<li>Display: 1024x768 minimum resolution</li>
						<li>Internet connection for updates</li>
					</ul>
				</div>

				<p style="text-align: center; margin-top: 3em;">
					Need assistance with installation?
					<a href="/contact">Contact our support team</a>
				</p>
			</div>
		</main>
		<Footer />
	</body>
</html>

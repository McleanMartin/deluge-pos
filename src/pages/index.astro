---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			main {
				padding: 0;
			}
			.hero {
				background: #000000;
				color: #ffffff;
				padding: 6rem 2rem;
				text-align: center;
			}
			.hero-content {
				max-width: 900px;
				margin: 0 auto;
			}
			.hero h1 {
				color: #ffffff;
				font-size: 4rem;
				margin-bottom: 1.5rem;
				font-weight: 800;
				letter-spacing: -0.04em;
				line-height: 1.1;
			}
			.hero-subtitle {
				font-size: 1.25rem;
				color: rgba(255, 255, 255, 0.85);
				margin-bottom: 3rem;
				line-height: 1.6;
				max-width: 700px;
				margin-left: auto;
				margin-right: auto;
			}
			.cta-buttons {
				display: flex;
				gap: 1rem;
				justify-content: center;
				flex-wrap: wrap;
			}
			.btn {
				display: inline-flex;
				align-items: center;
				justify-content: center;
				padding: 0.875rem 2rem;
				border-radius: var(--border-radius);
				font-weight: 600;
				font-size: 1rem;
				transition: var(--transition);
				text-decoration: none;
				border: 2px solid transparent;
			}
			.btn-primary {
				background: #ffffff;
				color: #000000;
			}
			.btn-primary:hover {
				opacity: 1;
				transform: translateY(-2px);
				box-shadow: 0 8px 20px rgba(255, 255, 255, 0.2);
			}
			.btn-secondary {
				background: transparent;
				color: #ffffff;
				border-color: rgba(255, 255, 255, 0.3);
			}
			.btn-secondary:hover {
				opacity: 1;
				border-color: #ffffff;
				background: rgba(255, 255, 255, 0.1);
			}
			.features-section {
				padding: 5rem 2rem;
				background: #fafafa;
			}
			.features-container {
				max-width: 1200px;
				margin: 0 auto;
			}
			.section-title {
				text-align: center;
				margin-bottom: 3rem;
			}
			.section-title h2 {
				font-size: 2.5rem;
				margin-bottom: 0.75rem;
			}
			.section-title p {
				font-size: 1.125rem;
				color: rgb(var(--gray));
			}
			.features-grid {
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
				gap: 2rem;
				margin-top: 3rem;
			}
			.feature-card {
				background: #ffffff;
				padding: 2rem;
				border-radius: var(--border-radius);
				border: 1px solid rgb(var(--gray-medium));
				transition: var(--transition);
			}
			.feature-card:hover {
				box-shadow: var(--box-shadow-lg);
				border-color: rgb(var(--gray));
				transform: translateY(-4px);
			}
			.feature-card h3 {
				font-size: 1.25rem;
				margin-bottom: 0.75rem;
				color: rgb(var(--black));
			}
			.feature-card p {
				color: rgb(var(--gray));
				line-height: 1.6;
				margin: 0;
			}
			.cta-section {
				padding: 5rem 2rem;
				text-align: center;
				background: #ffffff;
			}
			.cta-section h2 {
				font-size: 2.5rem;
				margin-bottom: 1rem;
			}
			.cta-section p {
				font-size: 1.125rem;
				max-width: 700px;
				margin: 0 auto 2.5rem;
			}
			@media (max-width: 768px) {
				.hero h1 {
					font-size: 2.5rem;
				}
				.hero-subtitle {
					font-size: 1.125rem;
				}
				.section-title h2 {
					font-size: 2rem;
				}
				.features-grid {
					grid-template-columns: 1fr;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<section class="hero">
				<div class="hero-content">
					<h1>Modern Point of Sale for Retail & Wholesale</h1>
					<p class="hero-subtitle">
						Deluge POS streamlines your business operations with powerful inventory management,
						sales analytics, and an intuitive interface built for speed and reliability.
					</p>
					<div class="cta-buttons">
						<a href="/downloads" class="btn btn-primary">Get Started</a>
						<a href="/contact" class="btn btn-secondary">Contact Sales</a>
					</div>
				</div>
			</section>

			<section class="features-section">
				<div class="features-container">
					<div class="section-title">
						<h2>Everything you need to run your business</h2>
						<p>Powerful features designed for retail and wholesale operations</p>
					</div>
					<div class="features-grid">
						<div class="feature-card">
							<h3>Retail & Wholesale</h3>
							<p>Seamlessly manage both retail and wholesale transactions with flexible pricing, customer tiers, and bulk order processing.</p>
						</div>
						<div class="feature-card">
							<h3>Inventory Management</h3>
							<p>Real-time stock tracking, automatic reorder alerts, and comprehensive inventory control across multiple locations.</p>
						</div>
						<div class="feature-card">
							<h3>Sales Analytics</h3>
							<p>Detailed reports and actionable insights to help you make data-driven decisions and optimize your business.</p>
						</div>
						<div class="feature-card">
							<h3>Multi-User Support</h3>
							<p>Role-based access control, user permissions, and activity tracking for your entire team.</p>
						</div>
						<div class="feature-card">
							<h3>Customer Management</h3>
							<p>Build lasting relationships with comprehensive customer profiles, purchase history, and loyalty programs.</p>
						</div>
						<div class="feature-card">
							<h3>Fast & Reliable</h3>
							<p>Lightning-fast checkout process with an intuitive interface that requires minimal training.</p>
						</div>
					</div>
				</div>
			</section>

			<section class="cta-section">
				<h2>Ready to transform your business?</h2>
				<p>
					Join thousands of businesses worldwide that trust Deluge POS for their daily operations.
					Built with modern technology for reliability, speed, and ease of use.
				</p>
				<div class="cta-buttons">
					<a href="/downloads" class="btn btn-primary">Download Now</a>
					<a href="/contact" class="btn btn-secondary">Get in Touch</a>
				</div>
			</section>
		</main>
		<Footer />
	</body>
</html>

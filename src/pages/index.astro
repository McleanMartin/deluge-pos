---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			main {
				padding: 0;
			}
			.hero {
				background: #000000;
				color: #ffffff;
				padding: 6rem 2rem;
				text-align: center;
			}
			.hero-content {
				max-width: 900px;
				margin: 0 auto;
			}
			.hero h1 {
				color: #ffffff;
				font-size: 4rem;
				margin-bottom: 1.5rem;
				font-weight: 800;
				letter-spacing: -0.04em;
				line-height: 1.1;
			}
			.hero-subtitle {
				font-size: 1.25rem;
				color: rgba(255, 255, 255, 0.85);
				margin-bottom: 3rem;
				line-height: 1.6;
				max-width: 700px;
				margin-left: auto;
				margin-right: auto;
			}
			.cta-buttons {
				display: flex;
				gap: 1rem;
				justify-content: center;
				flex-wrap: wrap;
			}
			.btn {
				display: inline-flex;
				align-items: center;
				justify-content: center;
				padding: 0.875rem 2rem;
				border-radius: var(--border-radius);
				font-weight: 600;
				font-size: 1rem;
				transition: var(--transition);
				text-decoration: none;
				border: 2px solid transparent;
			}
			.btn-primary {
				background: #ffffff;
				color: #000000;
			}
			.btn-primary:hover {
				opacity: 1;
				transform: translateY(-2px);
				box-shadow: 0 8px 20px rgba(255, 255, 255, 0.2);
			}
			.btn-secondary {
				background: transparent;
				color: #ffffff;
				border-color: rgba(255, 255, 255, 0.3);
			}
			.btn-secondary:hover {
				opacity: 1;
				border-color: #ffffff;
				background: rgba(255, 255, 255, 0.1);
			}
			.features-section {
				padding: 5rem 2rem;
				background: #fafafa;
			}
			.features-container {
				max-width: 1200px;
				margin: 0 auto;
			}
			.section-title {
				text-align: center;
				margin-bottom: 3rem;
			}
			.section-title h2 {
				font-size: 2.5rem;
				margin-bottom: 0.75rem;
			}
			.section-title p {
				font-size: 1.125rem;
				color: rgb(var(--gray));
			}
			.features-grid {
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
				gap: 2rem;
				margin-top: 3rem;
			}
			.feature-card {
				background: #ffffff;
				padding: 2rem;
				border-radius: var(--border-radius);
				border: 1px solid rgb(var(--gray-medium));
				transition: var(--transition);
			}
			.feature-card:hover {
				box-shadow: var(--box-shadow-lg);
				border-color: rgb(var(--gray));
				transform: translateY(-4px);
			}
			.feature-card h3 {
				font-size: 1.25rem;
				margin-bottom: 0.75rem;
				color: rgb(var(--black));
			}
			.feature-card p {
				color: rgb(var(--gray));
				line-height: 1.6;
				margin: 0;
			}
			.cta-section {
				padding: 5rem 2rem;
				text-align: center;
				background: #ffffff;
			}
			.cta-section h2 {
				font-size: 2.5rem;
				margin-bottom: 1rem;
			}
			.cta-section p {
				font-size: 1.125rem;
				max-width: 700px;
				margin: 0 auto 2.5rem;
			}
			/* Stats Section */
			.stats-section {
				background: #000000;
				color: #ffffff;
				padding: 4rem 2rem;
			}
			.stats-container {
				max-width: 1200px;
				margin: 0 auto;
			}
			.stats-grid {
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
				gap: 3rem;
				text-align: center;
			}
			.stat-item {
				padding: 1rem;
			}
			.stat-number {
				font-size: 3rem;
				font-weight: 800;
				color: #ffffff;
				margin-bottom: 0.5rem;
				line-height: 1;
			}
			.stat-label {
				color: rgba(255, 255, 255, 0.7);
				font-size: 0.95rem;
				text-transform: uppercase;
				letter-spacing: 0.05em;
			}
			/* Showcase Section */
			.showcase-section {
				padding: 5rem 2rem;
				background: #ffffff;
			}
			.showcase-container {
				max-width: 1200px;
				margin: 0 auto;
			}
			.showcase-grid {
				display: grid;
				grid-template-columns: 1fr 1fr;
				gap: 4rem;
				align-items: center;
				margin-top: 3rem;
			}
			.showcase-grid:nth-child(even) {
				direction: rtl;
			}
			.showcase-grid:nth-child(even) > * {
				direction: ltr;
			}
			.showcase-content h3 {
				font-size: 2rem;
				margin-bottom: 1rem;
			}
			.showcase-content ul {
				list-style: none;
				padding: 0;
				margin: 1.5rem 0;
			}
			.showcase-content li {
				padding: 0.75rem 0;
				padding-left: 2rem;
				position: relative;
				color: rgb(var(--gray));
			}
			.showcase-content li:before {
				content: "âœ“";
				position: absolute;
				left: 0;
				color: #000000;
				font-weight: bold;
			}
			.showcase-image {
				background: rgb(var(--gray-light));
				border-radius: var(--border-radius);
				padding: 2rem;
				border: 2px solid rgb(var(--gray-medium));
				min-height: 300px;
				display: flex;
				align-items: center;
				justify-content: center;
				color: rgb(var(--gray));
				font-size: 0.9rem;
			}
			/* Testimonials */
			.testimonials-section {
				padding: 5rem 2rem;
				background: rgb(var(--gray-light));
			}
			.testimonials-container {
				max-width: 1200px;
				margin: 0 auto;
			}
			.testimonials-grid {
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
				gap: 2rem;
				margin-top: 3rem;
			}
			.testimonial-card {
				background: #ffffff;
				padding: 2rem;
				border-radius: var(--border-radius);
				border: 1px solid rgb(var(--gray-medium));
			}
			.testimonial-content {
				font-style: italic;
				color: rgb(var(--gray-dark));
				margin-bottom: 1.5rem;
				line-height: 1.7;
			}
			.testimonial-author {
				display: flex;
				align-items: center;
				gap: 1rem;
			}
			.author-avatar {
				width: 48px;
				height: 48px;
				background: #000000;
				border-radius: 50%;
				display: flex;
				align-items: center;
				justify-content: center;
				color: #ffffff;
				font-weight: 600;
			}
			.author-info h4 {
				margin: 0;
				font-size: 0.95rem;
			}
			.author-info p {
				margin: 0.25rem 0 0;
				font-size: 0.85rem;
				color: rgb(var(--gray));
			}
			/* Integrations */
			.integrations-section {
				padding: 4rem 2rem;
				background: #ffffff;
				border-top: 1px solid rgb(var(--gray-medium));
			}
			.integrations-container {
				max-width: 900px;
				margin: 0 auto;
				text-align: center;
			}
			.integrations-grid {
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
				gap: 2rem;
				margin-top: 2.5rem;
			}
			.integration-logo {
				display: flex;
				align-items: center;
				justify-content: center;
				padding: 1.5rem;
				background: rgb(var(--gray-light));
				border-radius: var(--border-radius);
				font-weight: 600;
				color: rgb(var(--gray));
				transition: var(--transition);
			}
			.integration-logo:hover {
				background: rgb(var(--gray-medium));
			}
			@media (max-width: 768px) {
				.hero h1 {
					font-size: 2.5rem;
				}
				.hero-subtitle {
					font-size: 1.125rem;
				}
				.section-title h2 {
					font-size: 2rem;
				}
				.features-grid {
					grid-template-columns: 1fr;
				}
				.showcase-grid {
					grid-template-columns: 1fr;
				}
				.stats-grid {
					grid-template-columns: repeat(2, 1fr);
					gap: 2rem;
				}
				.testimonials-grid {
					grid-template-columns: 1fr;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<section class="hero">
				<div class="hero-content">
					<h1>Modern Point of Sale for Retail & Wholesale</h1>
					<p class="hero-subtitle">
						Deluge POS streamlines your business operations with powerful inventory management,
						sales analytics, and an intuitive interface built for speed and reliability.
					</p>
					<div class="cta-buttons">
						<a href="/downloads" class="btn btn-primary">Get Started</a>
						<a href="/contact" class="btn btn-secondary">Contact Sales</a>
					</div>
				</div>
			</section>

			<section class="stats-section">
				<div class="stats-container">
					<div class="stats-grid">
						<div class="stat-item">
							<div class="stat-number">10K+</div>
							<div class="stat-label">Active Users</div>
						</div>
						<div class="stat-item">
							<div class="stat-number">50M+</div>
							<div class="stat-label">Transactions</div>
						</div>
						<div class="stat-item">
							<div class="stat-number">99.9%</div>
							<div class="stat-label">Uptime</div>
						</div>
						<div class="stat-item">
							<div class="stat-number">24/7</div>
							<div class="stat-label">Support</div>
						</div>
					</div>
				</div>
			</section>

			<section class="features-section">
				<div class="features-container">
					<div class="section-title">
						<h2>Everything you need to run your business</h2>
						<p>Powerful features designed for retail and wholesale operations</p>
					</div>
					<div class="features-grid">
						<div class="feature-card">
							<h3>Retail & Wholesale</h3>
							<p>Seamlessly manage both retail and wholesale transactions with flexible pricing, customer tiers, and bulk order processing.</p>
						</div>
						<div class="feature-card">
							<h3>Inventory Management</h3>
							<p>Real-time stock tracking, automatic reorder alerts, and comprehensive inventory control across multiple locations.</p>
						</div>
						<div class="feature-card">
							<h3>Sales Analytics</h3>
							<p>Detailed reports and actionable insights to help you make data-driven decisions and optimize your business.</p>
						</div>
						<div class="feature-card">
							<h3>Multi-User Support</h3>
							<p>Role-based access control, user permissions, and activity tracking for your entire team.</p>
						</div>
						<div class="feature-card">
							<h3>Customer Management</h3>
							<p>Build lasting relationships with comprehensive customer profiles, purchase history, and loyalty programs.</p>
						</div>
						<div class="feature-card">
							<h3>Fast & Reliable</h3>
							<p>Lightning-fast checkout process with an intuitive interface that requires minimal training.</p>
						</div>
					</div>
				</div>
			</section>

			<section class="showcase-section">
				<div class="showcase-container">
					<div class="showcase-grid">
						<div class="showcase-content">
							<h3>Powerful Inventory Control</h3>
							<p>Take complete control of your stock with real-time tracking and automated management.</p>
							<ul>
								<li>Multi-location inventory tracking</li>
								<li>Automatic low stock alerts</li>
								<li>Barcode scanning support</li>
								<li>Batch and serial number tracking</li>
								<li>Stock transfer between locations</li>
							</ul>
						</div>
						<div class="showcase-image">
							Dashboard Screenshot
						</div>
					</div>

					<div class="showcase-grid">
						<div class="showcase-content">
							<h3>Advanced Analytics</h3>
							<p>Make data-driven decisions with comprehensive sales reports and insights.</p>
							<ul>
								<li>Real-time sales dashboards</li>
								<li>Custom report generation</li>
								<li>Profit margin analysis</li>
								<li>Best-selling products tracking</li>
								<li>Employee performance metrics</li>
							</ul>
						</div>
						<div class="showcase-image">
							Analytics Screenshot
						</div>
					</div>
				</div>
			</section>

			<section class="testimonials-section">
				<div class="testimonials-container">
					<div class="section-title">
						<h2>Trusted by businesses worldwide</h2>
						<p>See what our customers have to say</p>
					</div>
					<div class="testimonials-grid">
						<div class="testimonial-card">
							<div class="testimonial-content">
								"Deluge POS transformed our retail operations. The inventory management alone saved us countless hours every week."
							</div>
							<div class="testimonial-author">
								<div class="author-avatar">SM</div>
								<div class="author-info">
									<h4>Sarah Martinez</h4>
									<p>Owner, Martinez Electronics</p>
								</div>
							</div>
						</div>
						<div class="testimonial-card">
							<div class="testimonial-content">
								"The best POS system we've used. Fast, reliable, and the analytics help us make better business decisions every day."
							</div>
							<div class="testimonial-author">
								<div class="author-avatar">JC</div>
								<div class="author-info">
									<h4>James Chen</h4>
									<p>Manager, Chen Wholesale</p>
								</div>
							</div>
						</div>
						<div class="testimonial-card">
							<div class="testimonial-content">
								"Outstanding support and incredibly easy to use. Our team was up and running in less than a day."
							</div>
							<div class="testimonial-author">
								<div class="author-avatar">EJ</div>
								<div class="author-info">
									<h4>Emily Johnson</h4>
									<p>CEO, Johnson Retail Group</p>
								</div>
							</div>
						</div>
					</div>
				</div>
			</section>

			<section class="integrations-section">
				<div class="integrations-container">
					<h2>Integrates with your favorite tools</h2>
					<p>Seamlessly connect with popular business software</p>
					<div class="integrations-grid">
						<div class="integration-logo">QuickBooks</div>
						<div class="integration-logo">Stripe</div>
						<div class="integration-logo">PayPal</div>
						<div class="integration-logo">Shopify</div>
						<div class="integration-logo">Mailchimp</div>
						<div class="integration-logo">Xero</div>
					</div>
				</div>
			</section>

			<section class="cta-section">
				<h2>Ready to transform your business?</h2>
				<p>
					Join thousands of businesses worldwide that trust Deluge POS for their daily operations.
					Built with modern technology for reliability, speed, and ease of use.
				</p>
				<div class="cta-buttons">
					<a href="/downloads" class="btn btn-primary">Download Now</a>
					<a href="/contact" class="btn btn-secondary">Get in Touch</a>
				</div>
			</section>
		</main>
		<Footer />
	</body>
</html>

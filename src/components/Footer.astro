---
const today = new Date();
---

<footer>
	<div class="footer-content">
		<div class="footer-section">
			<h3>Deluge POS</h3>
			<p>Modern Point of Sale solution for retail and wholesale businesses.</p>
		</div>
		<div class="footer-section">
			<h4>Quick Links</h4>
			<ul>
				<li><a href="/">Home</a></li>
				<li><a href="/downloads">Downloads</a></li>
				<li><a href="/docs">Documentation</a></li>
				<li><a href="/contact">Contact</a></li>
			</ul>
		</div>
		<div class="footer-section">
			<h4>Contact</h4>
			<ul>
				<li><a href="mailto:support@delugepos.com">support@delugepos.com</a></li>
				<li>+1 (555) 123-4567</li>
			</ul>
		</div>
	</div>
	<div class="footer-bottom">
		&copy; {today.getFullYear()} Deluge POS. All rights reserved.
	</div>
</footer>
<style>
	footer {
		padding: 3em 2em 2em;
		background: #000000;
		color: #ffffff;
		margin-top: 4em;
	}
	.footer-content {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
		gap: 2em;
		max-width: 1200px;
		margin: 0 auto 2em;
	}
	.footer-section h3 {
		margin-top: 0;
		font-size: 1.5em;
		color: #ffffff;
	}
	.footer-section h4 {
		margin-top: 0;
		font-size: 1.1em;
		color: #ffffff;
		margin-bottom: 1em;
	}
	.footer-section p {
		color: rgba(255, 255, 255, 0.8);
		line-height: 1.6;
	}
	.footer-section ul {
		list-style: none;
		padding: 0;
		margin: 0;
	}
	.footer-section ul li {
		margin: 0.5em 0;
	}
	.footer-section a {
		color: rgba(255, 255, 255, 0.8);
		text-decoration: none;
		transition: color 0.2s;
	}
	.footer-section a:hover {
		color: #ffffff;
	}
	.footer-bottom {
		text-align: center;
		padding-top: 2em;
		border-top: 1px solid rgba(255, 255, 255, 0.1);
		color: rgba(255, 255, 255, 0.6);
		font-size: 0.9em;
	}
	@media (max-width: 720px) {
		footer {
			padding: 2em 1em 1em;
		}
	}
</style>

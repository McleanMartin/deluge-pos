---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header>
	<nav>
		<h2><a href="/">{SITE_TITLE}</a></h2>
		<div class="internal-links">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/downloads">Downloads</HeaderLink>
			<HeaderLink href="/contact">Contact</HeaderLink>
		</div>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 0;
		background: #000000;
		border-bottom: 1px solid rgba(255, 255, 255, 0.1);
		position: sticky;
		top: 0;
		z-index: 100;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 2rem;
		height: 64px;
	}
	h2 {
		margin: 0;
		font-size: 1.25rem;
		font-weight: 700;
		letter-spacing: -0.02em;
	}
	h2 a {
		text-decoration: none;
		color: #ffffff;
		transition: var(--transition);
	}
	h2 a:hover {
		opacity: 0.8;
	}
	.internal-links {
		display: flex;
		align-items: center;
		gap: 0.5rem;
	}
	.internal-links a {
		padding: 0.625rem 1rem;
		color: rgba(255, 255, 255, 0.9);
		text-decoration: none;
		font-weight: 500;
		font-size: 0.95rem;
		border-radius: 6px;
		transition: var(--transition);
	}
	.internal-links a:hover {
		opacity: 1;
		background: rgba(255, 255, 255, 0.1);
		color: #ffffff;
	}
	.internal-links a.active {
		background: rgba(255, 255, 255, 0.15);
		color: #ffffff;
	}
	@media (max-width: 768px) {
		nav {
			padding: 0 1rem;
			height: 56px;
		}
		h2 {
			font-size: 1.125rem;
		}
		.internal-links {
			gap: 0.25rem;
		}
		.internal-links a {
			padding: 0.5rem 0.75rem;
			font-size: 0.9rem;
		}
	}
</style>
